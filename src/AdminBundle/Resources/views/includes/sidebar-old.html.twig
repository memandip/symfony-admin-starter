<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    {% set routeName = app.request.get('_route') %}
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="treeview  {% if routeName == "country_list" or routeName == "state_list" or routeName == "city_list" %} active {% endif %}">
                <a href="#">
                    <i class="fa fa-share"></i> <span>Locality</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li {% if routeName == "country_list" %} class="active" {% endif %}>
                        <a href="{{ path('country_list') }}"><i class="fa fa-circle-o"></i> Country</a>
                    </li>
                    <li {% if routeName == "state_list" %} class="active" {% endif %}>
                        <a href="{{ path('state_list') }}"><i class="fa fa-circle-o"></i> State</a>
                    </li>
                    <li {% if routeName == "city_list" %} class="active" {% endif %}>
                        <a href="{{ path('city_list') }}"><i class="fa fa-circle-o"></i> City</a>
                    </li>
                </ul>
            </li>

            {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
                <li class="treeview  {% if routeName == "users_list" or routeName == "user_create" %} active {% endif %}">
                    <a href="#">
                        <i class="fa fa-user"></i> <span>User</span>
                        <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                    </a>
                    <ul class="treeview-menu">
                        <li {% if routeName == "users_list" %} class="active" {% endif %}>
                            <a href="{{ path('users_list') }}"><i class="fa fa-circle-o"></i> List</a>
                        </li>
                        <li {% if routeName == "user_create" %} class="active" {% endif %}>
                            <a href="{{ path('user_create') }}"><i class="fa fa-circle-o"></i> Create</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            <li {% if routeName == 'media_files_list' %} class="active" {% endif %}>
                <a href="{{ path('media_files_list') }}">
                    Medias
                </a>
            </li>

        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
